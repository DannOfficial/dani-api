<body>
  <div class="content">
    <div class="text">
      Verify OTP
    </div>
    <form action="/verify" method="POST">
      <div class="field">
        <input type="number" id="otp" name="otp" placeholder="OTP" required>
        <span class="fas fa-key"></span>
        <!--<label>OTP</label>-->
      </div>
      <br>
      <button>Verify OTP</button>
    </form>
  </div>
